<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loginworks.gridwithlistviewdemo.activity.ShareElementActivity">

    <ImageView
        android:id="@+id/imgFullItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:transitionName="transitonImage"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtRevealAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#455ed1"
        android:text="Click to View"
        android:textAlignment="center"
        android:visibility="invisible" />
</RelativeLayout>
